/*搜索框*/

.vInputBox {
  width: 100%;
  height: 90rpx;
  background: #fcc800;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vInput {
  width: 680rpx;
  height: 70rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vInput icon {
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  line-height: 100rpx;
}

.vInput input {
  width: 682rpx;
  height: 70rpx;
}

.input {
  width: 94rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #efeff4;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 26rpx;
}

.clearInput {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #fff;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 26rpx;
}

/*搜索框...*/

/* 搜索结果 */

.wxSearch {
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
}

.wxSearchInner {
  background-color: #fff;
}

.wxSearch-section {
  background-color: #fff;
  padding: 5px 10px;
  border: 1px #eee solid;
}

.wxSearch-pancel {
  display: flex;
  flex-direction: row;
}

.wxSearch-input {
  flex: 8;
  background-color: #eee;
  padding: 5px 10px;
}

.wxSearch-button {
  flex: 1;
  border: none !important;
  color: cornflowerblue !important;
}

.wxSearchTitle {
  display: block;
  padding: 10px 5px 5px 10px;
  font-size: 12px;
  text-align: center;
}

.wxSearchMindKeyItem {
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 14px;
  color: cornflowerblue;
}

.wxSearchKeyList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.wxSearchKeyItem {
  flex: 0 0 20%;
  font-size: 14px;
  text-align: center;
  border: 1px solid #eee;
  margin: 5px;
  padding: 5px 10px;
  border-radius: 5px;
}

.wxSearchHistoryItem {
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
}

.wxSearchHistoryItemText {
  flex: 8;
  font-size: 14px;
}

.wxSearchHistoryItemDel {
  flex: 1;
  font-size: 12px;
  text-align: center;
  padding: 3px 5px;
  border: 1px solid #eee;
  border-radius: 5px;
}

.wxSearchHistoryEmpty {
  text-align: center;
  height: 50px;
  line-height: 50px;
  font-size: 12px;
}

.wxSearchDeleteAllBtn {
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 12px;
}

