/* common.wxss */

/*轮播图*/

.slide-image {
  width: 100%;
  height: 500rpx;
}

.swiper-box {
  display: block;
  height: 500rpx;
}



.swiper-box .wx-swiper-dot {
  width: 40rpx;
  display: inline-flex;
  height: 10rpx;
  margin-left: 20rpx;
  justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
}

.swiper-box .wx-swiper-dot-active::before {
  background: rgba(0, 0, 0, 0.8);
}

