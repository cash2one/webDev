/*输入*/

.pulish {
  width: 730rpx;
  margin: 0 auto;
}

.pulishIpt {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pulishIpt input {
  width: 440rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #e2e2e3;
  padding-left: 20rpx;
}

.pulishHolder {
  color: #757575;
  margin-left: 10rpx;
  font-size: 24rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
}

.pulishIptImg {
  width: 80rpx;
  height: 60rpx;
  border: 1px solid #e2e2e3;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pulishIptImg image {
  width: 60rpx;
  height: 44rpx;
  opacity: 0.5;
}

.pulishImgDel {
  position: absolute;
  z-index: 999;
  opacity: 0.8;
}

.pulishIpt button {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 0 0 0 20rpx;
  padding: 0;
  border: 1px solid #e2e2e3;
  background: transparent;
  font-size: 24rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
}

.pulishIpt button::after {
  border: none;
}

