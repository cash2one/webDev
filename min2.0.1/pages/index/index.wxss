/**index.wxss**/
@import "/utils/common.wxss";

/* 轮播图 */

.slideInto {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  display: block;
  opacity: 0.8;
  background: #fff;
  position: absolute;
  bottom: 0rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 轮播图... */

/*搜索框*/

.vInputBox {
  width: 100%;
  height: 90rpx;
  background: #fcc800;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vInput {
  width: 670rpx;
  height: 70rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
}

.vInput icon {
  width: 70rpx;
  height: 70rpx;
  line-height: 120rpx;
  text-align: center;
  margin: 0 10rpx;
}

.vInput input {
  width: 670rpx;
  height: 70rpx;
  line-height: 70rpx;
}

/*搜索框...*/

/*案例详情展示*/

.indexCase {
  width: 100%;
  margin: 20rpx 0 20rpx 0;
  /* background: #efeff4; */
}

.indexCaseItem {
  width: 100%;
  height: 206rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-bottom: 4rpx dashed #efefef;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

.indexCaseItemImg {
  width: 234rpx;
  height: 188rpx;
  display: block;
  margin-left: 12rpx;
}

.indexCaseWords {
  width: 484rpx;
  height: 188rpx;
  margin-left: 10rpx;
  margin-right: 12rpx;
}

.indexCaseWordsTit {
  width: 470rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 28rpx;
  color: #000;
}

.indexCaseWordsIntro {
  width: 470rpx;
  height: 88rpx;
  line-height: 88rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 24rpx;
  color: #999;
}

