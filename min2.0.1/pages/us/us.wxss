/*菜单*/

.introMenu {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #000;
  position: fixed;
  top: 0;
  z-index: 9999;
}

.introMenuList {
  min-width: 160rpx;
  max-width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
}

.on {
  color: #ff0;
  border-bottom: 2rpx solid #ff0;
}

