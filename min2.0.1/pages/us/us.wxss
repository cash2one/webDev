/*intro*/

.introBox {
  width: 100%;
  height: 100%;
  margin-top: 100rpx;
}

.intro {
  width: 100%;
  height: 100%;
  display: none;
}

.show {
  display: block;
}

.logo {
  width: 100%;
  height: 320rpx;
}

.logo image {
  width: 100%;
  height: 320rpx;
}

/*公司介绍*/

.aboutUs {
  width: 100%;
  margin: 40rpx auto 40rpx auto;
}

.aboutUs text {
  width: 730rpx;
  margin: 10rpx auto;
  display: block;
  font-size: 26rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  line-height: 46rpx;
  text-indent: 2em;
}

.aboutUsImg {
  width: 100%;
  height: 1000rpx;
