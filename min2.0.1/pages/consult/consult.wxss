.amity {
  width: 100%;
  height: 450rpx;
  display: block;
  margin-bottom: 30rpx;
}

.consult .consultInput {
  width: 730rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #e9e9e9;
  box-sizing: border-box;
  color: #757575;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 24rpx;
  margin: 10rpx 10rpx 0 10rpx;
  padding: 0rpx 0rpx 0rpx 10rpx;
}

.consultFrom {
  color: #757575;
}

.consult .consultArea {
  width: 730rpx;
  height: 180rpx;
  line-height: 24rpx;
  border: 2rpx solid #e9e9e9;
  box-sizing: border-box;
  color: #757575;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 28rpx;
  margin: 10rpx 10rpx 0 10rpx;
  padding: 10rpx 0rpx 0rpx 10rpx;
}

.consult button {
  width: 730rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #000;
  color: #ff0;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 32rpx;
  margin: 30rpx 10rpx 0 10rpx;
}

/*  */

.call {
  width: 730rpx;
  height: 60rpx;
  margin: 20rpx 10rpx;
  display: flex;
}

.call button {
  width: 40%;
  height: 60rpx;
  line-height: 60rpx;
  background: #000;
  color: #ff0;
  font-size: 30rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  text-align: center;
}

.call text {
  width: 60%;
  height: 60rpx;
  display: block;
  line-height: 60rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-size: 28rpx;
}

