/**case.wxss**/
@import "/utils/common.wxss";

/*菜单*/

.caseMenu {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.caseMenuList {
  background-color: #fff;
}

.caseMenuListBtn {
  min-width: 160rpx;
  max-width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  background: #fff;
}

.caseMenuListBtn::after {
  border: none;
}

.on {
  color: #ff0;
  background-color: #888;
  border-radius: 50rpx;
}

/*菜单...*/

/*case*/

.caseBox {
  width: 100%;
  height: 100%;
}

.case {
  width: 100%;
  height: 100%;
  display: none;
}

.show {
  display: block;
}

/*recommed*/

.recommed {
  width: 100%;
}

.recommedImg {
  width: 100%;
  height: 236rpx;
  display: flex;
  justify-content: space-around;
}

.recommedImg image {
  width: 356rpx;
  height: 236rpx;
}

.recommedTxt {
  width: 100%;
  height: 120rpx;
  margin: 20rpx 0 20rpx 0;
  display: flex;
  flex-direction: row;
}

.recommedTxtLf, .recommedTxtRt {
  width: 355rpx;
  height: 110rpx;
  line-height: 40rpx;
  margin: 0 10rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 4rpx dashed #efefef;
  box-sizing: border-box;
}

.recommedTxtHd {
  width: 355rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  display: inline-block;
  color: #000;
  font-size: 28rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
  font-weight: bolder;
}

.recommedTxtIn {
  width: 355rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  overflow: hidden;
  display: inline-block;
  color: #999;
  font-size: 24rpx;
  font-family: Arial, 微软雅黑, "Microsoft Yahei";
}

